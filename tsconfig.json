{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~root/*": ["./*"],
      "~src/*": ["./src/*"],
      "~app/*": ["./src/app/*"],
      "~config/*": ["./src/config/*"],
      "~tests/*": ["./tests/*"]
    }
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
